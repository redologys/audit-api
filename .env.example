# ===========================================
# Audit API Environment Configuration
# Copy this file to .env and fill in values
# ===========================================

# Groq API Key for LLM scoring
GROQ_API_KEY=

# Model Configuration
MODEL_NAME=llama-3.3-70b-versatile
TEMPERATURE=0.3
MAX_TOKENS=4096
TIMEOUT_SECONDS=30

# Database
DATABASE_URL=sqlite+aiosqlite:///./audits.db

# Rate Limiting
RATE_LIMIT_FREE=10/hour
RATE_LIMIT_PAID=100/hour

# Email (SendGrid or Resend)
SENDGRID_API_KEY=
FROM_EMAIL=audits@yourdomain.com

# Stripe Payment Integration
STRIPE_SECRET_KEY=
STRIPE_PRICE_ID=
STRIPE_WEBHOOK_SECRET=
FULL_REPORT_PRICE=29.00

# Logic Test Mode (set to true to skip Groq and use mock data)
LOGIC_TEST_MODE=false

# App Settings
DEBUG=false
NODE_ENV=production
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ADMIN_API_KEY=
