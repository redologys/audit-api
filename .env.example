# ===========================================
# Audit API Environment Configuration
# Copy this file to config/.env and fill in values
# ===========================================

# ============ REQUIRED ============

# Groq API Key for LLM scoring
GROQ_API_KEY=

# ============ STRIPE (Required for payments) ============

# Stripe secret key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=

# Stripe Price ID for full report product
STRIPE_PRICE_ID=

# Stripe webhook signing secret (starts with whsec_)
STRIPE_WEBHOOK_SECRET=

# Full report price in dollars
FULL_REPORT_PRICE=29.00

# ============ SECURITY ============

# Admin API key for protected endpoints
ADMIN_API_KEY=

# CORS allowed origins (comma-separated, NO wildcards in production)
CORS_ORIGINS=https://your-frontend.vercel.app,http://localhost:5173

# ============ APP SETTINGS ============

# Debug mode (set to false in production!)
DEBUG=false

# Server port
PORT=8000

# Logic test mode - bypasses Groq and uses mock data
LOGIC_TEST_MODE=false

# ============ DATABASE ============

DATABASE_URL=sqlite+aiosqlite:///./audits.db

# ============ EMAIL (Resend) ============

RESEND_API_KEY=
FROM_EMAIL=audits@yourdomain.com
