# Groq API Key for LLM scoring
GROQ_API_KEY=gsk_your_api_key_here

# Model Configuration
MODEL_NAME=llama-3.3-70b-versatile
TEMPERATURE=0.3
MAX_TOKENS=4096
TIMEOUT_SECONDS=30

# Database
DATABASE_URL=sqlite+aiosqlite:///./audits.db

# Rate Limiting
RATE_LIMIT_FREE=10/hour
RATE_LIMIT_PAID=100/hour

# Email (Resend)
RESEND_API_KEY=re_your_resend_key
FROM_EMAIL=audits@yourdomain.com

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PRICE_ID=price_...
STRIPE_WEBHOOK_SECRET=whsec_...
FULL_REPORT_PRICE=29.00

# Logic Test Mode (set to true to skip Groq)
LOGIC_TEST_MODE=false

# App Settings
DEBUG=false
CORS_ORIGINS=http://localhost:5173,https://final-front-end-henna.vercel.app
ADMIN_API_KEY=your_admin_key_here
